{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tox",
            "type": "shell",
            "command": "tox"
        },
        {
            "label": "pytest",
            "type": "shell",
            "command": "poetry run pytest"
        },
        {
            "label": "mypy",
            "type": "shell",
            "command": "poetry run mypy multidyndnscli"
        },
        {
            "label": "black",
            "type": "shell",
            "command": "poetry run black ."
        },
        {
            "label": "pylint",
            "type": "shell",
            "command": "poetry run pylint multidyndnscli"
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "poetry run coverage run -m pytest --cov=multidyndnscli && poetry run coverage report -m"
        }
    ]
}
